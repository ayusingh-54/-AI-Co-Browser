{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "npx tsx server/index.ts",
      "options": {
        "env": {
          "NODE_ENV": "development"
        }
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "npx tsx script/build.ts",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "db:push",
      "type": "shell",
      "command": "npx drizzle-kit push",
      "problemMatcher": []
    },
    {
      "label": "typecheck",
      "type": "shell",
      "command": "npx tsc --noEmit",
      "group": "build",
      "problemMatcher": ["$tsc"]
    }
  ]
}
